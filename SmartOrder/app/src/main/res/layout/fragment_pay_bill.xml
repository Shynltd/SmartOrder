<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_5sdp"
    android:background="@drawable/radius_item_dialg"
    tools:context=".fragment.cashier.PayBillFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/tvBillCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:text="Mã hóa đơn" />

        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/tvTableCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:text="Bàn số 1" />

        <androidx.recyclerview.widget.RecyclerView
            android:background="@drawable/radius_search"
            android:id="@+id/rvListBillOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_330sdp"
            android:layout_margin="@dimen/_5sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="horizontal"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="23">
                <EditText
                    android:id="@+id/edtCoupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_4sdp"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btnCoupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_19sdp"
                android:textSize="@dimen/_8sdp"
                android:text="Giảm giá" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTongtien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:text="Tổng thanh toán:"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:layout_toRightOf="@id/tvTongtien"
                android:text="10000"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvT2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvT"
                android:layout_margin="@dimen/_8sdp"
                android:layout_toRightOf="@id/tvTongtien"
                android:text="12000"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:text="Hủy" />

            <Button
                android:id="@+id/btnPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="2"
                android:text="Thanh toán" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>