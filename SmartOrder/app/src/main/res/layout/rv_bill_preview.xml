<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:layout_margin="@dimen/_10sdp">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@id/imgLogo"
        android:gravity="center"
        android:text="Tên món ăn" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="Total:" />

    <ImageButton
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:id="@+id/btnTang"
        android:layout_toLeftOf="@id/tvTotal"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/chevron_right_50px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:gravity="center"
        android:layout_toLeftOf="@id/btnTang"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/_8sdp"
        android:id="@+id/tvSl"/>
    <ImageButton
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:id="@+id/btnGiam"
        android:layout_toLeftOf="@id/tvSl"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/chevron_left_50px"/>

</RelativeLayout>