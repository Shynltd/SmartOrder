<% include ../common/nav.ejs %>
<form method="post" action="/users/create" class="container" enctype="multipart/form-data">
    <div class="form-group">
        <label for="formGroupExampleInput">User Name</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="userName" placeholder="">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput">Chức vụ</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="role" placeholder="">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput">Họ và tên</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="fullName" placeholder="">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput">Số CMND</label>
        <input type="number" class="form-control" id="formGroupExampleInput" name="soCMND" placeholder="">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput">Số điện thoại</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="phone" placeholder="">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput">Địa chỉ</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="address" placeholder="">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput">Tuổi</label>
        <input type="number" class="form-control" id="formGroupExampleInput" name="age" placeholder="">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput">Avatar</label>
        <input type="file" class="form-control" id="formGroupExampleInput" name="avatar">
    </div>
    <% if (err){%>
        <div class="alert alert-danger" role="alert">
            <%= msg %>
        </div>
    <%  }%>
    <div class="text-center">
        <button class="btn-primary btn-sm" type="submit">Thêm nhân viên</button>
        &nbsp;
        <a href="/brands" class="btn-primary btn-sm">Hủy</a>
    </div>
</form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
