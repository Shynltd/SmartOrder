<% include ../common/nav.ejs%>
<div class="container mt-5 d-flex justify-content-center">
    <div class="card-group">
        <div class="card-columns">
            <% for (var i = 0; i < users.length; i++) { %>
            <div class="card p-3">
                <div class="d-flex align-items-center">
                    <div class="image"><img style="width: 155px; height: 155px"
                                src="<%=users[i].avatar%>"
                                class="rounded"></div>
                    <div class="ml-3 w-100">
                        <h4 class="mb-0 mt-0"><%= users[i].fullName %></h4> <span>Chức vụ: <%=users[i].role%></span>
                        <div class="p-2 mt-2 bg-primary d-flex justify-content-between rounded text-white stats">
                            <div class="d-flex flex-column"><span class="articles">Articles</span> <span
                                        class="number1">38</span></div>
                            <div class="d-flex flex-column"><span class="followers">Followers</span> <span
                                        class="number2">980</span>
                            </div>
                            <div class="d-flex flex-column"><span class="rating">Rating</span> <span
                                        class="number3">8.9</span></div>
                        </div>
                        <div class="button mt-2 d-flex flex-row align-items-center">
                            <% if (users[i].role != "Admin"){%>
                            <a onclick="return confirm('Bạn có muốn xóa thông tin người này')" href="/users/delete/<%=users[i]._id%>" class="btn btn-sm btn-danger w-100">Delete</a>
                            <%}%>
                            <a href="/users/info/<%=users[i]._id%>" class="btn btn-sm btn-primary w-100 ml-2">Profile</a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
